# AI Chat Service Configuration for Drone/Autonomous Systems
# 無人機/自動駕駛系統 AI 聊天服務配置

# Server Configuration
PORT=8100
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=*

# OpenAI Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
AI_MODEL=gpt-4-turbo-preview

# Alternative: Use Azure OpenAI
# OPENAI_API_BASE=https://your-resource.openai.azure.com/
# AI_MODEL=your-deployment-name

# Alternative: Use local LLM
# OPENAI_API_BASE=http://localhost:11434/v1
# AI_MODEL=llama3

# Security Configuration
JWT_SECRET=your-jwt-secret-here
ENABLE_AUTH=false

# Performance Configuration
MAX_TOKENS=4096
TEMPERATURE=0.7
REQUEST_TIMEOUT_MS=30000

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Drone-specific Settings
ENABLE_COMMAND_PARSING=true
ENABLE_TELEMETRY_CONTEXT=true
