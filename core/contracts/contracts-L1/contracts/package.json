{
  "name": "@slasolve/contracts-l1",
  "version": "1.0.0",
  "description": "SLASolve Contracts L1 - Core contract management service",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    // 用於完整重建（清理後再編譯），取代 prebuild hook
    "rebuild": "npm run clean && npm run build",
    "lint": "eslint src/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "sbom": "npm audit --audit-level moderate --json > sbom.json",
    "scan": "npm audit --audit-level high",
    "predeploy": "npm run typecheck && npm run lint && npm run test && npm run build",
    "clean": "rimraf dist"
  },
  "keywords": [
    "contracts",
    "l1",
    "slasolve",
    "microservice"
  ],
  "author": "SLASolve Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "zod": "^3.22.4",
    "@sigstore/sign": "^2.2.0",
    "@sigstore/verify": "^1.0.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.25",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  }
}