{
  "name": "@slasolve/contracts-l1",
  "version": "1.0.0",
  "description": "SLASolve Contracts L1 - Core contract management service",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "sbom": "npm audit --audit-level moderate --json > sbom.json",
    "scan": "npm audit --audit-level high",
    "predeploy": "npm run typecheck && npm run lint && npm run test && npm run build",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "contracts",
    "l1",
    "slasolve",
    "microservice"
  ],
  "author": "SLASolve Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "zod": "^3.25.76",
    "@sigstore/sign": "^2.3.2",
    "@sigstore/verify": "^1.2.1",
    "crypto": "^1.0.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}